{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    // Con use this for more similarity with frontend
    "paths": {
      "src/*": ["src/*"],
      // Hybrid approach: Use submodule in dev (with fallback to package)
      // In CI/CD: submodule is deleted, so it uses submodule paths that we'll copy from package
      
      // Pattern: src/domain/entities/* and src/domain/flows/*
      "src/domain/entities/*": [
        "src/domain/src/entities/*"                            // Submodule (or symlink to package)
      ],
      "src/domain/flows/*": [
        "src/domain/src/flows/*"                               // Submodule (or symlink to package)
      ],
      
      // Direct file imports
      "src/domain/entities": [
        "src/domain/src/entities"
      ],
      "src/domain/flows": [
        "src/domain/src/flows"
      ],
      
      // Barrel exports
      "src/domain": [
        "src/domain/src/index"                                 // Submodule barrel
      ]
    }
  }
}
